<div id="controll-panel__header" class="floating-window__header">WebSFM</div>

<div id="controll-panel__input">
    <div {{action "enter" "input"}}>Input Panel</div>
</div>

<div id="controll-panel__phases">
    <div class="controll-panel__phase__tab">Structure from Motion</div>
    <div class="controll-panel__phase__body">
        <div id="controll-panel__sift"    class="controll-panel__phase">
            <div {{action "enter" "extractor"}}>Feature Extraction Phase</div>
        </div>
        <div id="controll-panel__bundler" class="controll-panel__phase">
            <div {{action "enter" "register"}}>Register Phase</div>
        </div>
        <div id="controll-panel__mvs"     class="controll-panel__phase">
            <div {{action "enter" "stereo"}}>MVS Phase </div>
        </div>
    </div>
</div>

<div id="controll-panel__footer">

    <div class="controll-panel__state-body">
        <div>{{threadPoolSize}} cores can be used</div>
    </div>

    <div class="controll-panel__state-bar">
        <div class="controll-panel__state-bar__toggle">
            {{#if isRunning}}
                <div class="is_running" {{action "stop"}}>Running</div>
            {{else}}
                <div class="is_stopped" {{action "run"}}>Stopped</div>
            {{/if}}
        </div>
        <div class="controll-panel__state-bar__body">
            some info
        </div>
    </div>

</div>