<div class="demo-thumbnail__header">
    <span>{{name}}</span>
    <div class="exit-icon" {{action "confirmDelete"}}></div>
</div>

<div class="demo-thumbnail__body">

    {{#if isConfirmDelete}}
        <div class="demo-thumbnail__delete-confirm">
            <div {{action "cancelDelete"}} class="demo-thumbnail__delete-confirm__cancel">
                <h1>Cancel</h1>
            </div>
            <div {{action "delete"}} class="demo-thumbnail__delete-confirm__delete">
                <h1>Delete</h1>
            </div>
        </div>
    {{/if}}

    {{#if isDeleting}}
        <div class="demo-thumbnail__deleting">
            <h1>Deleting</h1>
        </div>
    {{/if}}

    <div {{bind-attr class=":demo-thumbnail__state-bar isDownloaded isInprogress"}}>
        {{#if isDownloaded}}
            <div {{action "enter"}}>Enter</div>
        {{else}}
            {{#if isInprogress}}
                <div>Downloading</div>
            {{else}}
                <div {{action "download"}}>Click to download</div>
            {{/if}}
        {{/if}}
    </div>

    <div id="demo-thumbnail__details__images" class="demo-thumbnail__detail">
        IMAGES {{finishedImages.length}}/{{images.length}}
    </div>

    <div id="demo-thumbnail__details__sift" class="demo-thumbnail__detail">
        FEATURES {{finishedSIFT.length}}/{{images.length}}
    </div>

    <div id="demo-thumbnail__details__bundler" class="demo-thumbnail__detail">
        BUNDLER
        {{#if bundlerFinished}}
            finished
        {{else}}
            {{#if hasBundler}}
                avaliable
            {{else}}
                not avaliable
            {{/if}}
        {{/if}}
    </div>

    <div id="demo-thumbnail__details__mvs" class="demo-thumbnail__detail">
        MVS
        {{#if mvsFinished}}
            finished
        {{else}}
            {{#if hasMVS}}
                avaliable
            {{else}}
                not avaliable
            {{/if}}
        {{/if}}
    </div>

</div>