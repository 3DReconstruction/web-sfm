<div class="welcome-screen__detail__toggle" {{action "close" target=view}}></div>

<div class="welcome-screen__detail__progress">

    <ul class="welcome-screen__detail__download-selections">

        <li {{bind-attr class="selectedImage:is-selected imagesFinished:is-loaded"}}
            {{action "toggleImage"}}>

            <h1>Images {{loadedImages.length}}/{{images.length}}</h1>

        </li>

        <li {{bind-attr class="selectedFeature:is-selected hasFeature::not-avaliable featuresFinished:is-loaded"}}
            {{action "toggleFeature"}}>

            <h1>Features {{finishedSIFT.length}}/{{images.length}}</h1>

        </li>

        <li {{bind-attr class="selectedMatch:is-selected hasMatch::not-avaliable matchesLoaded:is-loaded"}}
            {{action "toggleMatch"}}>

            <h1>
                Matches
                {{#if hasMatch}}
                    avaliable
                {{else}}
                    not avaliable
                {{/if}}
            </h1>

        </li>

        <li {{bind-attr class="selectedCalibration:is-selected hasCalibration::not-avaliable calibrationLoaded:is-loaded"}}
            {{action "toggleCalibration"}}>

            <h1>
                Calibration
                {{#if calibrationLoaded}}
                    finished
                {{else}}
                    {{#if hasCalibration}}
                        avaliable
                    {{else}}
                        not avaliable
                    {{/if}}
                {{/if}}
            </h1>

        </li>

        <li {{bind-attr class="selectedMVS:is-selected hasMVS::not-avaliable mvsLoaded:is-loaded"}}
            {{action "toggleMVS"}}>

            <h1>
                MVS
                {{#if mvsLoaded}}
                    finished
                {{else}}
                    {{#if hasMVS}}
                        avaliable
                    {{else}}
                        not avaliable
                    {{/if}}
                {{/if}}
            </h1>

        </li>

    </ul>

    <div class="welcome-screen__detail__download" {{action "download"}}>
        {{#if demoController.isInprogress}}
            <h1>Loading</h1>
        {{else}}
            <h1>Load</h1>
        {{/if}}

    </div>

</div>