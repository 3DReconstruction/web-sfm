<div id="main-container__input-gallery-container">
    <ul id="main-container__input-gallery">

        {{#each controller}}
            <div class="main-container__input-gallery__item">
                <div class="main-container__input-gallery__image">
                    {{#if thumbnail}}
                        <img {{bind-attr src=thumbnail}} {{action "expand"}}>
                    {{/if}}
                </div>
            </div>
        {{/each}}

        {{outlet}}

    </ul>
</div>