<ul id="main-container__input-gallery">

    {{#view App.ImageLoaderView controller=controller}}
        Import Image, Drag here!
    {{/view}}

    {{#each controller}}
        <div class="main-container__input-gallery__item main-container__input-gallery__image">
            {{#if thumbnail}}
                <img {{bind-attr src=thumbnail}} {{action "expand"}}>
            {{else}}
                <div class="image-loading">Loading</div>
            {{/if}}
        </div>
    {{/each}}

    {{outlet}}

</ul>