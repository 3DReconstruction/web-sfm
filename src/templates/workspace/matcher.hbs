{{#view view.GridView}}

    <div class="match-grid__row">

        <div class="match-grid__cell">
            <div class="match-grid__anchor"></div>
        </div>

        {{! ===================================================== }}
        {{!                   Top Thumbnails                      }}
        {{! ===================================================== }}

        {{#each imgTo in images}}
            <div class="match-grid__cell">
                <img class="match-grid__thumbnail" {{bind-attr src=imgTo.thumbnail}}>
            </div>
        {{/each}}

    </div>

    {{#each iFrom in images}}

    {{! ===================================================== }}
    {{!                     Each Row                          }}
    {{! ===================================================== }}

        <div class="match-grid__row">

            <div class="match-grid__cell">
                <img class="match-grid__thumbnail" {{bind-attr src=iFrom.thumbnail}}>
            </div>

            {{#each iTo in images}}
                <div class="match-grid__cell">
                    {{#view view.NodeView from=iFrom to=iTo}}{{/view}}
                </div>
            {{/each}}

        </div>

    {{/each}}

{{/view}}

{{outlet}}