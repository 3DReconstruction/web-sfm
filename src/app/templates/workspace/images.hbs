<div id="main-container__input-gallery-container">

    <ul id="main-container__input-gallery">

        <div class="main-container__input-gallery__item">
            {{image-importer}}
        </div>

        {{#each tile in images}}
            <div class="main-container__input-gallery__item">
                <div class=" main-container__input-gallery__image" style="background-image: url('{{tile.thumbnail}}')" {{action "expand" tile}}>

                </div>
            </div>
        {{/each}}

        {{outlet}}
    </ul>

</div>